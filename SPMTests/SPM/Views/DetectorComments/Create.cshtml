@using MvcCheckBoxList.Model
@model MOE.Common.Models.DetectorComment

@Html.ValidationSummary(true, "", new { @class = "text-danger" })
@Html.Hidden("DetectorID", Model.ID)
@Html.AntiForgeryToken()
<div class="row">
        @Html.LabelFor(model => model.CommentText, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.CommentText, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CommentText, "", new { id = "CommentText-error", @class = "text-danger" })
            <a href="javascript:PostCreateDetectorComment('@Model.ID')" class="btn btn-dark">Create</a>
</div>
